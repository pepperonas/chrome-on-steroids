{
  "manifest_version": 3,
  "name": "Chrome On Steroids",
  "version": "0.0.134",
  "description": "AI-powered browser automation: Auto-generate cover letters for freelancermap.de, optimize product listings for kleinanzeigen.de, and automated purchase inquiries",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.freelancermap.de/*",
    "https://www.kleinanzeigen.de/*",
    "https://www.linkedin.com/*",
    "https://www.instagram.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.freelancermap.de/*",
        "https://www.kleinanzeigen.de/*",
        "https://www.linkedin.com/*",
        "https://www.instagram.com/*"
      ],
      "js": [
        "content/content-router.js"
      ],
      "css": [
        "content/content-styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
